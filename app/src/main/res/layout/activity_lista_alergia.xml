<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.andxroid.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amandabeltoso.alergias.ListaAlergiaActivity">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Alergias"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/colorVermelho"
        />



    <ListView
        android:id="@+id/listAlergia"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_voltar_listaAlergia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:layout_marginTop="50dp"
            android:onClick="voltar"
            android:textColor="@color/colorLigh"
            android:layout_marginRight="120dp"
            android:text="Voltar"/>


        <Button
            android:id="@+id/btn_cad_alergia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button"
            android:onClick="cadastrarAlergia"
            android:text="Cadastrar Alergia"
            android:textColor="@color/colorLigh" />


    </LinearLayout>





</LinearLayout>
